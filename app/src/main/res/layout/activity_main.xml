<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <!-- Headline -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/MultifunctionalApp"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <!-- First row of buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center">

            <Button
                android:id="@+id/phoneCallButton"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ic_baseline_phone_24"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/emailButton"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ic_baseline_email_24"
                android:layout_marginEnd="16dp" />

        </LinearLayout>

        <!-- Second row of buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/messageButton"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ic_baseline_message_24"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/galleryButton"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ic_baseline_photo_library_24"
                android:layout_marginEnd="16dp" />
        </LinearLayout>

        <!-- Third row of buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/cameraButton"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ic_baseline_photo_camera_24" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>